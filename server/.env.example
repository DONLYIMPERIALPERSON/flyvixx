# ===========================================
# FlyVixx Server Environment Variables Example
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real values to version control

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# Database Configuration
# ===========================================
# Replace with your actual database URL
DATABASE_URL=postgresql://username:password@localhost:5432/flyvixx_db

# ===========================================
# JWT Configuration
# ===========================================
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# CORS Configuration
# ===========================================
# Your frontend URL (localhost for development)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Game Configuration
# ===========================================
MAX_PLAYERS_PER_ROOM=1000
MULTIPLIER_UPDATE_INTERVAL=100
PREPARING_DURATION=3000
CRASH_DISPLAY_DURATION=3000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info

# ===========================================
# Descope Configuration
# ===========================================
# Get these from your Descope dashboard
DESCOPE_PROJECT_ID=your-descope-project-id
DESCOPE_MANAGEMENT_KEY=your-descope-management-key

# ===========================================
# SafeHaven API Configuration
# ===========================================
# SafeHaven sandbox URL for development
SAFEHAVEN_BASE_URL=https://api.sandbox.safehavenmfb.com
# Your SafeHaven client ID
SAFEHAVEN_CLIENT_ID=your-safehaven-client-id
# Your webhook URL (ngrok or production URL)
SAFEHAVEN_CALLBACK_URL=https://your-webhook-url.com/api/safehaven/webhook
# SafeHaven settlement bank code
SAFEHAVEN_SETTLEMENT_BANK_CODE=999240
# Your SafeHaven settlement account number
SAFEHAVEN_SETTLEMENT_ACCOUNT_NUMBER=your-settlement-account-number
# Frontend SafeHaven client ID (same as above)
NEXT_PUBLIC_SAFEHAVEN_CLIENT_ID=your-safehaven-client-id

# ===========================================
# SafeHaven OAuth2 Keys
# ===========================================
# Generate these from SafeHaven dashboard
# Format: The entire certificate/private key content as a single line
SAFEHAVEN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT_HERE\n-----END PRIVATE KEY-----"
SAFEHAVEN_CERTIFICATE="-----BEGIN CERTIFICATE-----\nYOUR_CERTIFICATE_CONTENT_HERE\n-----END CERTIFICATE-----"

# ===========================================
# Email Configuration (Resend)
# ===========================================
# Your Resend API key
RESEND_API_KEY=your-resend-api-key

# ===========================================
# Development Notes
# ===========================================
#
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in all the placeholder values with real credentials
# 3. For production, use the production/.env template
# 4. Never commit .env files with real credentials
#
# ===========================================